{
    "manifest_version": 2,
    "name": "Anki Online Dictionary Helper",
    "version": "0.1",
    "description": "An user definable online dictionary popup tool for helping add card in anki",
    "icons": {"16": "img/icon16.png", "48": "img/icon48.png", "128": "img/icon128.png"},
    "browser_action": {"default_icon": {"19": "img/icon19.png", "38": "img/icon38.png"}},

    "author": "Zhenyu Huang",
    "background": {"page": "bg/background.html"},
    "content_scripts": [{
        "matches": ["*://*/*", "file://*/*"],
        "js": [
            "fg/js/popup.js",
            "fg/js/client.js"
        ],
        "css": ["fg/css/client.css"]
    }],
    "minimum_chrome_version": "50.0.0.0",
    "options_ui": {
        "page": "bg/options.html"
    },
    "permissions": ["file://*/*", "http://*/*", "https://*/*", "storage"],
    "web_accessible_resources": [
        "fg/css/frame.css",
        "fg/img/play.png",
        "fg/img/cloud.png",
        "fg/img/plus.png",
        "fg/js/frame.js"
    ],
    "content_security_policy": "script-src 'self' https://rawgit.com; object-src 'self'"
}
